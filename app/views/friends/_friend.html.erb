<div id="<%= dom_id friend %>">

  <div class="card w-50">
    <div class="card-body">
      <h5 class="card-title"><%= friend.first_name %> <%= friend.last_name %></h5>
      <p class="card-text"><%= friend.email %> | <%= friend.phone %> | <%= friend.twitter %></p>

      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
      <%= link_to "Back", friends_path, class:"btn btn-dark" %>

      <%= button_to "Delete", @friend, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>

</div>
