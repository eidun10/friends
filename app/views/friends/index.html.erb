<table id="friends" class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th><%= link_to "First Name", :sort => "first_name"%></th>
      <th><%= link_to "Last Name", :sort => "last_name"%></th>
      <th><%= link_to "Email", :sort => "email"%></th>
      <th><%= link_to "Phone", :sort => "phone"%></th>
      <th><%= link_to "Twitter", :sort => "twitter"%></th>
    </tr>
  </thead>

  <% if @friends.present? %>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend %></td>
        <td><%=friend.last_name %></td>
        <td><%=friend.email %></td>
        <td><%=friend.phone %></td>
        <td><%=friend.twitter %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="2">No friends found.</td>
    </tr>
  <% end %>

</table>



<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<button type="button" class="btn btn-secondary">Secondary</button>
